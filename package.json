{
  "name": "my-app",
  "description": "A little Electron demo that shows Chrome/Node/Electron versions and a counter",
  "author":    "Rayen Omri rayenomri23p@gmail.com@example.com",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --publish never"
  },
  "build": {
    "appId": "com.rayenomri.myapp",
    "productName": "MyApp",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",  
      "output": "dist"
    },
    "win": {
      "target": [ "nsis", "zip" ]
    },
    "mac": {
      "target": [ "dmg", "zip" ]
    },
    "linux": {
      "target": [ "AppImage", "deb" ]
    }
  },
  "devDependencies": {
    "electron": "^36.1.0",
    "electron-builder": "^26.0.12"
  }
}
